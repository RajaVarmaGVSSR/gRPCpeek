{
  "name": "grpc-test-server",
  "version": "2.0.0",
  "description": "Comprehensive test gRPC server for gRPCpeek - supports multiple proto files, TLS, mTLS, and all streaming patterns",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:insecure": "node server.js",
    "start:tls": "cross-env TLS_MODE=tls node server.js",
    "start:mtls": "cross-env TLS_MODE=mtls node server.js",
    "start:self-signed": "cross-env TLS_MODE=self-signed node server.js",
    "test": "node test.js",
    "certs": "cd certs && ./generate-certs.sh",
    "certs:win": "cd certs && generate-certs.bat"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.8.0",
    "@grpc/proto-loader": "^0.7.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "cross-env": "^10.1.0",
    "grpc_tools_node_protoc_ts": "^5.3.0",
    "grpc-tools": "^1.12.0"
  },
  "keywords": [
    "grpc",
    "test-server",
    "protobuf",
    "tls",
    "mtls",
    "streaming"
  ]
}
